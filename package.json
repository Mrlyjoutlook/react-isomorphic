{
  "name": "react-isomorphic",
  "version": "1.0.0",
  "description": "A react multi application isomorphic solution",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon ./server/server.dev.js --watch server --watch build",
    "dist": "npm run clean && cross-env NODE_ENV=production webpack -p --config ./build/webpack.prod.config.js --progress",
    "clean": "rimraf ./dist/client/* && rimraf ./dist/server/* && rimraf ./views/prod/*",
    "start": "node ./dist/server/server.js",
    "pm2":"pm2 start ./dist/server/server.js -i 0",
    "lint":"eslint ./client"
  },
  "keywords": [
    "react",
    "redux",
    "react-route",
    "express",
    "isomorphic"
  ],
  "author": "MRLYJ",
  "license": "MIT",
  "devDependencies": {
    "asset-require-hook": "^1.0.2",
    "autoprefixer": "^6.6.1",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "css-modules-require-hook": "^4.0.5",
    "eslint": "^3.12.2",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-react": "^6.8.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.26.0",
    "json-loader": "^0.5.4",
    "nodemon": "^1.11.0",
    "postcss-loader": "^1.2.1",
    "progress-bar-webpack-plugin": "^1.9.2",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.0-rc.3",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.14.0"
  },
  "dependencies": {
