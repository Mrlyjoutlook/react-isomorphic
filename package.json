    "morgan": "^1.7.0",
    "normalize.css": "^5.0.0",
    "open": "0.0.5",
    "pm2": "^2.2.3",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0"
  }
}
